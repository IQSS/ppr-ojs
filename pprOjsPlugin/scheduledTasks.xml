<?xml version="1.0" encoding="UTF-8"?>

<!--
  * plugins/generic/pprOjsPlugin/scheduledTasks.xml
  *
  * This file describes the schedule tasks for the Peer Pre-Review Program Plugin
  *
  -->

<!DOCTYPE scheduled_tasks SYSTEM "../../../lib/pkp/dtd/scheduledTasks.dtd">

<scheduled_tasks>
	<task class="plugins.generic.pprOjsPlugin.tasks.PPRReviewDueDateEditorNotification">
		<descr>Custom notification for review due date for editors</descr>
		<frequency hour="0"/>
	</task>

	<task class="plugins.generic.pprOjsPlugin.tasks.PPRReviewReminder">
		<descr>Custom notification for review due date for reviewers</descr>
		<frequency hour="0"/>
	</task>

	<task class="plugins.generic.pprOjsPlugin.tasks.PPRReviewSentAuthorNotification">
		<descr>Custom notification for authors when a review is sent</descr>
		<frequency hour="0"/>
	</task>

	<task class="plugins.generic.pprOjsPlugin.tasks.PPRSubmissionClosedAuthorNotification">
		<descr>Custom notification for authors a period of time a submission is closed</descr>
		<frequency dayofweek="6"/>
	</task>
</scheduled_tasks>
